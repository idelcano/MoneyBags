<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="WideDialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppDialogEdittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColor">@color/bluetext</item>
    </style>
    <style name="AppDialogTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColor">@color/bluetext</item>
    </style>

    <style name="AppListViewTextContainer" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppDialogEdittextContainer" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="colorAccent">@color/blue</item>
    </style>
    <style name="AppDialogButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/bluetext</item>
        <item name="android:background">@color/green</item>
    </style>
    <style name="AppCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:elevation">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:textColor">@color/bluetext</item>
        <item name="android:background">@color/green</item>
    </style>
    <style name="ListRowFullItem" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_border</item>
    </style>
    <style name="ListRowTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">8dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/bluetext</item>
    </style>
    <style name="ListRowLeftItem" parent="@style/CommonRowItem">
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">@drawable/rounded_border</item>
    </style>
    <style name="ListRowRightItem" parent="@style/CommonRowItem">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:background">@drawable/rounded_border</item>
    </style>
    <style name="CommonRowItem" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/bluetext</item>
    </style>
    <style name="AppHeader" parent="@style/CommonRowItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blush</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
